<h3>Selected parts of cookie</h3>
<ul>
    <li class="addons">Base: {{cookie.base}} - {{pricify (findPrice allBases cookie.base)}} PLN</li>
    {{#each cookie.addons}}
        <li class="addons">

            {{#if (not ../noDeleteBtn)}}
                <a href="/configurator/delete-addon/{{this}}" class="btn btn-small">Delete</a>
            {{/if}}
            Addon: {{this}} - {{pricify (findPrice @root.allAddons this)}} PLN</li>
    {{/each}}

</ul>
<p>
    <strong>Total of {{pricify sum}} PLN </strong>
</p>